<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
   <li>
      <% if task.completed %>
        <input type="checkbox" checked disabled>
      <% else %>
        <input type="checkbox" disabled>
      <% end %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to task_path(task), method: :delete do %>
      <i class="far fa-trash-alt"></i>
      <% end %>

   </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>

